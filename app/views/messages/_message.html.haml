.message-box{data: {message: {id: message.id}}}
  .message-box__message-title
    .message-box__message-title__message-name
      = message.user.name
    .message-box__message-title__message-date 
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")     
  .message-box__message-main 
    - if message.content.present?
      %p.message-box__message-main__content
        = message.content
    = image_tag message.image.url, class: 'message-box__message-main__image' if message.image.present?